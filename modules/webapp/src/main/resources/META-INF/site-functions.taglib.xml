<facelet-taglib version="2.2"
                xmlns="http://xmlns.jcp.org/xml/ns/javaee"
                xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facelettaglibrary_2_2.xsd">

    <namespace>http://rogue.io/jsf/site/functions</namespace>

    <function>
        <function-name>getImage</function-name>
        <function-class>rogue.webapp.common.view.SiteFunctions</function-class>
        <function-signature>
            rogue.app.framework.model.BinaryResource getImage(rogue.app.store.catalog.model.Product,java.lang.String)
        </function-signature>
    </function>
    <function>
        <function-name>getImages</function-name>
        <function-class>rogue.webapp.common.view.SiteFunctions</function-class>
        <function-signature>
            java.util.List getImages(rogue.app.store.catalog.model.Product,java.lang.String)
        </function-signature>
    </function>
</facelet-taglib>
